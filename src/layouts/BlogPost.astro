---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'] & { slug: string };

const base = import.meta.env.BASE_URL;
const basePath = base.endsWith('/') ? base : `${base}/`;
const {
  title,
  description = '',
  pubDate,
  updatedDate,
  heroImage,
  ogImage,
  tags = [],
  slug,
  author,
  authorIcon,
}: Props = Astro.props;
const pageUrl = new URL(Astro.url, Astro.site).toString();
const slugifySegment = (segment = '') => {
  const raw = String(segment).normalize('NFKC').trim();
  const ascii = raw
    .toLowerCase()
    .replace(/[^a-z0-9]+/g, '-')
    .replace(/^-+|-+$/g, '');
  if (ascii) return ascii;
  return encodeURIComponent(raw).toLowerCase().replace(/%/g, '');
};
const slugifyPath = (p = '') =>
  String(p)
    .split('/')
    .filter(Boolean)
    .map(slugifySegment)
    .join('/');
const assetSlug = slugifyPath(slug);
const fallbackOg = `${basePath}og/${assetSlug}.png`;
const fallbackHero = `${basePath}hero/${assetSlug}.png`;
const ogImageUrl = ogImage
  ? new URL(ogImage.src, Astro.site).toString()
  : new URL(fallbackOg, Astro.site).toString();
const heroImageUrl = heroImage ? heroImage.src : fallbackHero;
const showGeneratedHero = !heroImage;
const authorName = author ?? 'Unknown';
const slugify = (s = '') =>
  String(s)
    .trim()
    .toLowerCase()
    .replace(/[^a-z0-9]+/g, '-')
    .replace(/^-+|-+$/g, '') || 'author';
const authorIconUrl = authorIcon ? authorIcon.src : `${basePath}icons/${slugify(authorName)}.png`;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} ogType="article" url={pageUrl} imageUrl={ogImageUrl} />
    <style>
      main {
        width: calc(100% - 2em);
        max-width: 100%;
        margin: 0;
      }
      .hero-image {
        position: relative;
        width: 100%;
        max-width: 780px;
        margin: 1.25em auto;
      }
      .hero-image img {
        display: block;
        width: 100%;
        height: auto;
        margin: 0 auto;
        border-radius: 12px;
        box-shadow: var(--box-shadow);
      }
      .author-icon {
        width: 40px;
        height: 40px;
        border-radius: 999px;
        object-fit: cover;
      }
      .author-fallback {
        width: 40px;
        height: 40px;
        border-radius: 999px;
        background: rgb(var(--gray-light));
        color: rgb(var(--gray-dark));
        display: grid;
        place-items: center;
        font-weight: 700;
      }
      .author-fallback.is-hidden {
        display: none;
      }
      .prose {
        width: 720px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 1em;
        color: rgb(var(--gray-dark));
      }
      .title {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
      }
      .title h1 {
        margin: 0 0 0.5em 0;
      }
      .date {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
      }
      .last-updated-on {
        font-style: italic;
      }

      .byline {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.6rem;
        margin: 0.75rem 0 0;
      }
      .author-line {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 600;
        color: rgb(var(--gray-dark));
      }
      .tags-line {
        display: inline-flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        justify-content: center;
      }
      .tag {
        display: inline-flex;
        align-items: center;
        padding: 0.25rem 0.6rem;
        border-radius: 999px;
        border: 1px solid rgb(var(--gray));
        color: rgb(var(--gray-dark));
        text-decoration: none;
        font-size: 0.95rem;
      }
      .tag:hover {
        border-color: rgb(var(--accent));
        color: rgb(var(--accent));
      }
    </style>
    {author && <meta name="author" content={author} />}
  </head>

  <body>
    <Header />
    <main>
      <article>
        <div class="hero-image">
          {showGeneratedHero ? (
            <img src={fallbackHero} alt="" loading="lazy" onerror={`this.onerror=null; this.src='${fallbackOg}';`} />
          ) : (
            heroImageUrl && <img src={heroImageUrl} alt="" loading="lazy" />
          )}
        </div>
        <div class="prose">
          <div class="title">
            <div class="date">
              <FormattedDate date={pubDate} />
              {updatedDate && (
                <div class="last-updated-on">Last updated on <FormattedDate date={updatedDate} /></div>
              )}
            </div>
            <h1>{title}</h1>
            <div class="byline">
              <div class="author-line">
                {authorIconUrl && (
                  <img
                    class="author-icon"
                    src={authorIconUrl}
                    alt={authorName}
                    loading="lazy"
                    onerror="this.style.display='none'; const f=this.nextElementSibling; if (f) f.style.display='grid';"
                  />
                )}
                <span class={`author-fallback${authorIconUrl ? ' is-hidden' : ''}`}>
                  {authorName.slice(0, 1).toUpperCase()}
                </span>
                <span>{authorName}</span>
              </div>
              {(tags ?? []).length > 0 && (
                <div class="tags-line" aria-label="Tags">
                  {(tags ?? []).map((t) => (
                    <a class="tag" href={`${basePath}?tag=${encodeURIComponent(t)}`}>{t}</a>
                  ))}
                </div>
              )}
            </div>
            <hr />
          </div>
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
