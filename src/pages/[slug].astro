---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import BlogPost from '../layouts/BlogPost.astro';
import TweetEmbed from '../components/TweetEmbed.astro';
import Color from '../components/Color.astro';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { slug: post.data.slug ?? post.id.replace(/\/index$/, '') },
		props: { ...post, slug: post.data.slug ?? post.id.replace(/\/index$/, '') },
	}));
}
type Props = CollectionEntry<'blog'> & { slug?: string };

const post = Astro.props as Props;
const slug = post.slug ?? post.id;
const { Content } = await render(post);
---

<BlogPost {...post.data} slug={slug}>
	<Content components={{ Tweet: TweetEmbed, Color }} />
</BlogPost>
